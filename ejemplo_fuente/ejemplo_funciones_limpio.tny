{Ejemplo de funciones con ambitos global y local}
int contador_global;
int valor_global;
int numeros[3];
int i;

func suma(int a, int b)
    int resultado;
    resultado := a + b;
    return resultado;
end

func incrementar()
    contador_global := contador_global + 1;
    return contador_global;
end

{Programa principal}
contador_global := 0;
valor_global := 5;

write suma(3, 4);
write suma(valor_global, 2);

incrementar();
incrementar();
write contador_global;